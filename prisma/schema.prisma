// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// Enums
enum UserRole {
  ADMIN
  CLIENT
}

enum PlanType {
  STARTER
  PROFESSIONAL
  AGENCY
}

enum ProjectStatus {
  DRAFT
  IN_PRODUCTION
  READY
  APPROVED
  REVISION
}

enum ProjectType {
  TEMPLATE_CREATION
  CAMPAIGN
}

enum TemplateStatus {
  PENDING_APPROVAL
  APPROVED
  REJECTED
}

// Models
model User {
  id            String   @id @default(cuid())
  email         String   @unique
  name          String
  passwordHash  String
  role          UserRole @default(CLIENT)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  organizations Organization[]
  comments      Comment[]
}

model Organization {
  id              String   @id @default(cuid())
  name            String
  plan            PlanType @default(STARTER)
  maxCreatives    Int      @default(300)
  maxBrands       Int      @default(1)
  paymentStatus   String   @default("active") // active, overdue, suspended
  lastPaymentDate DateTime?
  nextBillingDate DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  users           User[]
  brands          Brand[]
  activityLogs    ActivityLog[]
}

model ActivityLog {
  id             String       @id @default(cuid())
  action         String       // created_project, uploaded_creative, approved_project, etc
  description    String
  userId         String
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  createdAt      DateTime     @default(now())

  @@index([organizationId])
  @@index([createdAt])
}

model Brand {
  id              String   @id @default(cuid())
  name            String
  logoUrl         String?
  brandBookUrl    String?
  toneOfVoice     String?
  primaryColor    String?
  secondaryColor  String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  organizationId  String
  organization    Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  assets          Asset[]
  templates       Template[]
  projects        Project[]

  @@index([organizationId])
}

model Asset {
  id          String   @id @default(cuid())
  name        String
  url         String
  type        String   // image, pdf, video
  size        Int?
  createdAt   DateTime @default(now())

  brandId     String
  brand       Brand    @relation(fields: [brandId], references: [id], onDelete: Cascade)

  @@index([brandId])
}

model Template {
  id             String         @id @default(cuid())
  name           String
  description    String?
  imageUrl       String         // Imagem de referência da campanha
  category       String?        // banner, stories, feed, etc
  isActive       Boolean        @default(true)
  templateStatus TemplateStatus @default(APPROVED)
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt

  brandId        String
  brand          Brand          @relation(fields: [brandId], references: [id], onDelete: Cascade)

  projectId      String?        @unique
  originProject  Project?       @relation("TemplateOrigin", fields: [projectId], references: [id], onDelete: SetNull)

  projects       Project[]      @relation("TemplateProjects")

  @@index([brandId])
  @@index([isActive])
  @@index([templateStatus])
}

model Project {
  id                  String        @id @default(cuid())
  name                String
  briefingUrl         String?       // URL do arquivo de briefing (CSV, DOC, PDF, etc)
  briefingData        String?       // JSON string com dados parseados (se aplicável)
  estimatedCreatives  Int           @default(0)
  totalCreatives      Int?          // Total de criativos do projeto
  status              ProjectStatus @default(DRAFT)
  projectType         ProjectType   @default(CAMPAIGN)
  createdAt           DateTime      @default(now())
  updatedAt           DateTime      @updatedAt

  brandId             String
  brand               Brand         @relation(fields: [brandId], references: [id], onDelete: Cascade)

  templateId          String?
  template            Template?     @relation("TemplateProjects", fields: [templateId], references: [id], onDelete: SetNull)

  creatives           Creative[]
  comments            Comment[]
  generatedTemplate   Template?     @relation("TemplateOrigin")

  @@index([brandId])
  @@index([status])
  @@index([templateId])
  @@index([projectType])
}

model Creative {
  id           String   @id @default(cuid())
  name         String
  url          String
  thumbnailUrl String?
  format       String   // jpg, png, mp4
  width        Int?
  height       Int?
  lista        String?  // Lista/variação do briefing
  modelo       String?  // Modelo/template utilizado
  createdAt    DateTime @default(now())

  projectId    String
  project      Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
}

model Comment {
  id          String   @id @default(cuid())
  content     String
  createdAt   DateTime @default(now())

  projectId   String
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([userId])
}
